---
layout: base.njk
---

<!-- Breadcrumbs Navigation -->
<nav class="breadcrumbs" aria-label="Breadcrumb">
    <div class="breadcrumbs-container">
        <ol class="breadcrumbs-list">
            <li class="breadcrumb-item">
                <a href="{{ '/' | baseUrl }}" class="breadcrumb-link">Home</a>
                <span class="breadcrumb-separator" aria-hidden="true">→</span>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ '/blog/' | baseUrl }}" class="breadcrumb-link">History</a>
                <span class="breadcrumb-separator" aria-hidden="true">→</span>
            </li>
            <li class="breadcrumb-item">
                <span class="breadcrumb-current" aria-current="page">{{ title }}</span>
            </li>
        </ol>
    </div>
</nav>

<article class="post" data-reading-time>
    <header class="post-header">
        <div class="container container--narrow">
            {% if date %}
            <time class="post-date" datetime="{{ date | dateISO }}">
                {{ date | dateFormat }}
            </time>
            {% endif %}
            
            <h1 class="post-title">{{ title }}</h1>
            
            {% if description %}
            <p class="post-excerpt">{{ description }}</p>
            {% endif %}
            
            <!-- Enhanced Article Metadata -->
            <div class="article-meta">
                {% if author %}
                <div class="meta-item">
                    <svg class="meta-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    <span class="meta-label">Author:</span>
                    <span class="meta-value">{{ author }}</span>
                </div>
                {% endif %}
                
                <div class="meta-item">
                    <svg class="meta-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <polyline points="12 6 12 12 16 14"></polyline>
                    </svg>
                    <span class="meta-label">Reading Time:</span>
                    <span class="meta-value post-reading-time">5 min read</span>
                </div>
                
                {% if tags and tags.length > 0 %}
                <div class="meta-item">
                    <svg class="meta-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
                        <line x1="7" y1="7" x2="7.01" y2="7"></line>
                    </svg>
                    <span class="meta-label">Category:</span>
                    <span class="meta-value">
                        {% for tag in tags %}
                        {% if tag != "blog" %}{{ tag | capitalize }}{% endif %}
                        {% endfor %}
                    </span>
                </div>
                {% endif %}
            </div>
            
            {% if tags and tags.length > 0 %}
            <div class="post-tags">
                {% for tag in tags %}
                {% if tag != "blog" %}
                <span class="tag">{{ tag }}</span>
                {% endif %}
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </header>
    
    <div class="post-content">
        <div class="container container--narrow">
            {{ content | safe }}
        </div>
    </div>
    
    <footer class="post-footer">
        <div class="container container--narrow">
            <nav class="post-navigation" aria-label="Post navigation">
                <a href="{{ '/blog/' | baseUrl }}" class="btn btn--outline">
                    ← Back to History
                </a>
            </nav>
        </div>
    </footer>
</article>

<!-- Related Content Section -->
<section class="related-content">
    <div class="related-content-header">
        <h2 class="related-content-title">Continue Your Exploration</h2>
        <p class="related-content-subtitle">Discover more about Humanist Modernism principles and their applications</p>
    </div>
    <div class="related-grid">
        <a href="{{ '/projects/' | baseUrl }}" class="card">
            <div class="card-content">
                <h3 class="card-title">Design Principles</h3>
                <p class="card-description">Explore how Humanist Modernism prioritizes readability through interactive demonstrations</p>
                <div class="card-footer">
                    <span class="card-link">View Principles →</span>
                </div>
            </div>
        </a>
        <a href="{{ '/blog/' | baseUrl }}" class="card">
            <div class="card-content">
                <h3 class="card-title">More Articles</h3>
                <p class="card-description">Deep-dive into HM history, typography philosophy, and contemporary influence</p>
                <div class="card-footer">
                    <span class="card-link">Read More →</span>
                </div>
            </div>
        </a>
        <a href="{{ '/examples/' | baseUrl }}" class="card">
            <div class="card-content">
                <h3 class="card-title">Canonical Examples</h3>
                <p class="card-description">Learn how iA Writer, Medium, and data visualization exemplify HM principles</p>
                <div class="card-footer">
                    <span class="card-link">Learn More →</span>
                </div>
            </div>
        </a>
    </div>
</section>

<style>
/* Post-specific styles */
.post-header {
    padding: var(--spacing-3xl) 0 var(--spacing-2xl);
    border-bottom: 1px solid var(--color-border);
}

.post-date {
    display: inline-block;
    font-size: var(--font-size-body-sm);
    color: var(--color-text-muted);
    text-transform: none;
    letter-spacing: 0;
    margin-bottom: var(--spacing-md);
}

.post-title {
    font-size: var(--font-size-h1);
    font-weight: var(--font-weight-semibold);
    line-height: var(--line-height-heading);
    margin: var(--spacing-lg) 0 var(--spacing-md) 0;
    color: var(--color-text);
}

.post-excerpt {
    font-size: var(--font-size-body-lg);
    color: var(--color-text-light);
    margin: var(--spacing-lg) 0;
    line-height: var(--line-height-relaxed);
}

.post-meta {
    display: flex;
    gap: var(--spacing-lg);
    align-items: center;
    font-size: var(--font-size-body-sm);
    color: var(--color-text-muted);
    margin: var(--spacing-lg) 0;
}

.post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-lg);
}

.post-content {
    padding: var(--spacing-3xl) 0;
}

.post-content h2 {
    margin-top: var(--spacing-3xl);
    margin-bottom: var(--spacing-lg);
    font-size: var(--font-size-h2);
    font-weight: var(--font-weight-semibold);
}

.post-content h3 {
    margin-top: var(--spacing-2xl);
    margin-bottom: var(--spacing-md);
    font-size: var(--font-size-h3);
    font-weight: var(--font-weight-semibold);
}

.post-content p {
    margin-bottom: var(--spacing-lg);
    line-height: var(--line-height-body);
    font-size: var(--font-size-body);
}

.post-content ul,
.post-content ol {
    margin: var(--spacing-lg) 0;
    padding-left: var(--spacing-xl);
}

.post-content li {
    margin-bottom: var(--spacing-sm);
    line-height: var(--line-height-body);
}

.post-content code {
    background: var(--color-bg-alt);
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    font-size: 0.9em;
    font-family: 'Courier New', monospace;
    color: var(--color-text);
}

.post-content pre {
    background: var(--color-bg-alt);
    padding: var(--spacing-lg);
    border-radius: 6px;
    overflow-x: auto;
    margin: var(--spacing-lg) 0;
    border: 1px solid var(--color-border);
}

.post-content pre code {
    background: none;
    padding: 0;
    border-radius: 0;
}

.post-content blockquote {
    border-left: 3px solid var(--color-accent);
    padding-left: var(--spacing-lg);
    margin: var(--spacing-lg) 0;
    font-style: italic;
    color: var(--color-text-light);
}

.post-footer {
    padding: var(--spacing-2xl) 0 var(--spacing-3xl);
    border-top: 1px solid var(--color-border);
}

.post-navigation {
    display: flex;
    justify-content: center;
}

/* Responsive */
@media (max-width: 767px) {
    .post-header {
        padding: var(--spacing-2xl) 0 var(--spacing-lg);
    }
    
    .post-title {
        font-size: var(--font-size-h2);
    }
    
    .post-excerpt {
        font-size: var(--font-size-body);
    }
    
    .post-content {
        padding: var(--spacing-2xl) 0;
    }
    
    .post-content h2 {
        margin-top: var(--spacing-2xl);
    }
}
</style>