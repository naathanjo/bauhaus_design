---
layout: base.njk
---

<article class="post">
    <header class="post-header">
        <div class="container container--narrow">
            {% if date %}
            <time class="post-date" datetime="{{ date | dateISO }}">
                {{ date | dateFormat }}
            </time>
            {% endif %}
            
            <h1 class="post-title">{{ title }}</h1>
            
            {% if description %}
            <p class="post-excerpt">{{ description }}</p>
            {% endif %}
            
            <div class="post-meta">
                {% if author %}
                <span class="post-author">By {{ author }}</span>
                {% endif %}
                
                {% if content %}
                <span class="post-reading-time">{{ content | readingTime }} min read</span>
                {% endif %}
            </div>
            
            {% if tags and tags.length > 0 %}
            <div class="post-tags">
                {% for tag in tags %}
                {% if tag != "blog" %}
                <span class="tag">{{ tag }}</span>
                {% endif %}
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </header>
    
    <div class="post-content">
        <div class="container container--narrow">
            {{ content | safe }}
        </div>
    </div>
    
    <footer class="post-footer">
        <div class="container container--narrow">
            <nav class="post-navigation" aria-label="Post navigation">
                <a href="{{ '/blog/' | baseUrl }}" class="btn btn--outline">
                    ‚Üê Back to Blog
                </a>
            </nav>
        </div>
    </footer>
</article>

<style>
/* Post-specific styles */
.post-header {
    padding: var(--spacing-xl) 0 var(--spacing-lg);  /* Reduced from 3xl/2xl to xl/lg (32px/24px) */
    border-bottom: 1px solid var(--color-border);
}

.post-date {
    display: inline-block;
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--spacing-xs);  /* Reduced from sm to xs (4px) */
}

.post-title {
    font-size: var(--font-size-3xl);  /* Reduced from 4xl (40px) to 3xl (32px) */
    font-weight: 900;
    line-height: 1.1;
    margin: var(--spacing-sm) 0;  /* Reduced from md to sm (8px) */
    color: var(--color-text);
}

.post-excerpt {
    font-size: var(--font-size-lg);  /* Reduced from xl (20px) to lg (18px) */
    color: var(--color-text-secondary);
    margin: var(--spacing-md) 0;  /* Reduced from lg to md (16px) */
    line-height: 1.6;
}

.post-meta {
    display: flex;
    gap: var(--spacing-lg);
    align-items: center;
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin: var(--spacing-lg) 0;
}

.post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-lg);
}

.post-content {
    padding: var(--spacing-xl) 0;  /* Reduced from 3xl (64px) to xl (32px) */
}

.post-content h2 {
    margin-top: var(--spacing-xl);  /* Reduced from 3xl (64px) to xl (32px) */
    margin-bottom: var(--spacing-md);  /* Reduced from lg (24px) to md (16px) */
    font-size: var(--font-size-2xl);
    font-weight: 700;
}

.post-content h3 {
    margin-top: var(--spacing-lg);  /* Reduced from 2xl (48px) to lg (24px) */
    margin-bottom: var(--spacing-sm);  /* Reduced from md (16px) to sm (8px) */
    font-size: var(--font-size-xl);
    font-weight: 600;
}

.post-content p {
    margin-bottom: var(--spacing-md);  /* Reduced from lg (24px) to md (16px) */
    line-height: 1.7;  /* Reduced from 1.8 to 1.7 for tighter text */
}

.post-content ul,
.post-content ol {
    margin: var(--spacing-md) 0;  /* Reduced from lg (24px) to md (16px) */
    padding-left: var(--spacing-lg);  /* Reduced from xl (32px) to lg (24px) */
}

.post-content li {
    margin-bottom: var(--spacing-xs);  /* Reduced from sm (8px) to xs (4px) */
    line-height: 1.7;  /* Reduced from 1.8 to 1.7 */
}

.post-content code {
    background: var(--color-surface-raised);
    padding: 0.125rem 0.375rem;
    border-radius: 0;
    font-size: 0.9em;
    font-family: 'Courier New', monospace;
}

.post-content pre {
    background: var(--color-surface-raised);
    padding: var(--spacing-lg);
    border-radius: 0;
    overflow-x: auto;
    margin: var(--spacing-xl) 0;
}

.post-content pre code {
    background: none;
    padding: 0;
}

.post-content blockquote {
    border-left: 4px solid var(--color-primary);
    padding-left: var(--spacing-lg);
    margin: var(--spacing-xl) 0;
    font-style: italic;
    color: var(--color-text-secondary);
}

.post-footer {
    padding: var(--spacing-2xl) 0 var(--spacing-3xl);
    border-top: 1px solid var(--color-border);
}

.post-navigation {
    display: flex;
    justify-content: center;
}

/* Responsive */
@media (max-width: 768px) {
    .post-title {
        font-size: var(--font-size-3xl);
    }
    
    .post-excerpt {
        font-size: var(--font-size-lg);
    }
}
</style>
