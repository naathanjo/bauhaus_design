---
layout: base.njk
---

<article class="project">
    <header class="project-header">
        <div class="container container--narrow">
            {% if status %}
            <span class="project-status project-status--{{ status }}">{{ status }}</span>
            {% endif %}
            
            <h1 class="project-title">{{ title }}</h1>
            
            {% if description %}
            <p class="project-excerpt">{{ description }}</p>
            {% endif %}
            
            <div class="project-meta">
                {% if date %}
                <time class="project-date" datetime="{{ date | dateISO }}">
                    {{ date | dateFormat }}
                </time>
                {% endif %}
                
                <div class="project-links">
                    {% if github %}
                    <a href="{{ github }}" 
                       class="project-link" 
                       target="_blank" 
                       rel="noopener noreferrer"
                       aria-label="View source code on GitHub">
                        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" width="20" height="20">
                            <path fill="currentColor" d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                        </svg>
                        <span>Source Code</span>
                    </a>
                    {% endif %}
                    
                    {% if demo %}
                    <a href="{{ demo }}" 
                       class="project-link" 
                       target="_blank" 
                       rel="noopener noreferrer"
                       aria-label="View live demo">
                        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" width="20" height="20">
                            <path fill="currentColor" d="M14 3v2H4v14h14v-10h2v10c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V5c0-1.1.9-2 2-2h10zm8 0v8h-2V6.41l-7.29 7.3-1.42-1.42L18.59 5H14V3h8z"/>
                        </svg>
                        <span>Live Demo</span>
                    </a>
                    {% endif %}
                </div>
            </div>
            
            {% if tags and tags.length > 0 %}
            <div class="project-tags">
                {% for tag in tags %}
                {% if tag != "projects" %}
                <span class="tag">{{ tag }}</span>
                {% endif %}
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </header>
    
    {% if image %}
    <div class="project-image">
        <div class="container">
            <img src="{{ image | baseUrl }}" 
                 alt="{{ title }}"
                 loading="eager">
        </div>
    </div>
    {% endif %}
    
    <div class="project-content">
        <div class="container container--narrow">
            {{ content | safe }}
        </div>
    </div>
    
    <footer class="project-footer">
        <div class="container container--narrow">
            <nav class="project-navigation" aria-label="Project navigation">
                <a href="{{ '/projects/' | baseUrl }}" class="btn btn--outline">
                    ‚Üê Back to Projects
                </a>
            </nav>
        </div>
    </footer>
</article>

<style>
/* Project-specific styles */
.project-header {
    padding: var(--spacing-xl) 0 var(--spacing-lg);  /* Reduced from 3xl/2xl to xl/lg (32px/24px) */
}

.project-status {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 0;
    font-size: var(--font-size-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--spacing-sm);  /* Reduced from md to sm (8px) */
}

.project-status--active {
    background: var(--color-accent-light);
    color: var(--color-accent-dark);
}

.project-status--completed {
    background: var(--color-surface-raised);
    color: var(--color-text-muted);
}

.project-title {
    font-size: var(--font-size-3xl);  /* Reduced from 4xl (40px) to 3xl (32px) */
    font-weight: 900;
    line-height: 1.1;
    margin: var(--spacing-sm) 0;  /* Reduced from md to sm (8px) */
    color: var(--color-text);
}

.project-excerpt {
    font-size: var(--font-size-lg);  /* Reduced from xl (20px) to lg (18px) */
    color: var(--color-text-secondary);
    margin: var(--spacing-md) 0;  /* Reduced from lg to md (16px) */
    line-height: 1.6;
}

.project-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--spacing-lg);
    margin: var(--spacing-xl) 0;
    padding: var(--spacing-lg) 0;
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
}

.project-date {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
}

.project-links {
    display: flex;
    gap: var(--spacing-md);
}

.project-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--color-surface-raised);
    border-radius: 0;
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--color-text);
    text-decoration: none;
    transition: all var(--transition-base);
}

.project-link:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-2px);
}

.project-link svg {
    flex-shrink: 0;
}

.project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-lg);
}

.project-image {
    margin: var(--spacing-md) 0;  /* Reduced from 2xl (48px) to md (16px) for efficiency */
    max-height: 400px;  /* CRITICAL: Limit maximum height to prevent giant images */
    overflow: hidden;  /* Crop excess */
    background: var(--color-bg-alt);  /* Fallback background */
}

.project-image img {
    width: 100%;
    height: 400px;  /* BAUHAUS: Fixed height for consistent geometric proportions */
    object-fit: cover;  /* Crop to fill space professionally */
    border-radius: 0;
    box-shadow: var(--shadow-lg);
    display: block;  /* Remove inline spacing */
}

.project-content {
    padding: var(--spacing-xl) 0;  /* Reduced from 3xl (64px) to xl (32px) */
}

.project-content h2 {
    margin-top: var(--spacing-xl);  /* Reduced from 3xl (64px) to xl (32px) */
    margin-bottom: var(--spacing-md);  /* Reduced from lg (24px) to md (16px) */
    font-size: var(--font-size-2xl);
    font-weight: 700;
}

.project-content h3 {
    margin-top: var(--spacing-lg);  /* Reduced from 2xl (48px) to lg (24px) */
    margin-bottom: var(--spacing-sm);  /* Reduced from md (16px) to sm (8px) */
    font-size: var(--font-size-xl);
    font-weight: 600;
}

.project-content p {
    margin-bottom: var(--spacing-md);  /* Reduced from lg (24px) to md (16px) */
    line-height: 1.7;  /* Reduced from 1.8 to 1.7 for tighter text */
}

.project-content ul,
.project-content ol {
    margin: var(--spacing-md) 0;  /* Reduced from lg (24px) to md (16px) */
    padding-left: var(--spacing-lg);  /* Reduced from xl (32px) to lg (24px) */
}

.project-content li {
    margin-bottom: var(--spacing-xs);  /* Reduced from sm (8px) to xs (4px) */
    line-height: 1.7;  /* Reduced from 1.8 to 1.7 */
}

.project-content code {
    background: var(--color-surface-raised);
    padding: 0.125rem 0.375rem;
    border-radius: 0;
    font-size: 0.9em;
    font-family: 'Courier New', monospace;
}

.project-content strong {
    font-weight: 700;
    color: var(--color-text);
}

.project-footer {
    padding: var(--spacing-2xl) 0 var(--spacing-3xl);
    border-top: 1px solid var(--color-border);
}

.project-navigation {
    display: flex;
    justify-content: center;
}

/* Responsive */
@media (max-width: 768px) {
    .project-title {
        font-size: var(--font-size-3xl);
    }
    
    .project-excerpt {
        font-size: var(--font-size-lg);
    }
    
    .project-meta {
        flex-direction: column;
        align-items: flex-start;
    }
    
    .project-links {
        width: 100%;
        flex-direction: column;
    }
    
    .project-link {
        justify-content: center;
    }
}
</style>
